#!/bin/bash -eu

source $OPENSHIFT_JBOSS_UNIFIED_PUSH_DIR/bin/util

case "$1" in
  -v|--version)
    version="$2"
esac

echo "$version" > "$OPENSHIFT_JBOSS_UNIFIED_PUSH_DIR/env/OPENSHIFT_JBOSS_UNIFIED_PUSH_VERSION"

ln -s ${OPENSHIFT_JBOSS_UNIFIED_PUSH_DIR}/standalone/log ${OPENSHIFT_JBOSS_UNIFIED_PUSH_DIR}/logs

# Install the UnifiedPush Server WARs (auth and core)
cp ${OPENSHIFT_JBOSS_UNIFIED_PUSH_DIR}/versions/${version}/standalone/deployments/ROOT.war $OPENSHIFT_JBOSS_UNIFIED_PUSH_DIR/standalone/deployments
cp ${OPENSHIFT_JBOSS_UNIFIED_PUSH_DIR}/versions/${version}/standalone/deployments/unified-push-auth-server.war $OPENSHIFT_JBOSS_UNIFIED_PUSH_DIR/standalone/deployments
cp ${OPENSHIFT_JBOSS_UNIFIED_PUSH_DIR}/versions/${version}/standalone/deployments/unified-push-server.war $OPENSHIFT_JBOSS_UNIFIED_PUSH_DIR/standalone/deployments


JBOSS_HOME=/etc/alternatives/jbosseap-6
pushd $OPENSHIFT_JBOSS_UNIFIED_PUSH_DIR 1> /dev/null
  ln -s ${JBOSS_HOME}/jboss-modules.jar
  ln -s ${JBOSS_HOME}/modules
popd 1> /dev/null

touch ${OPENSHIFT_JBOSS_UNIFIED_PUSH_DIR}/env/OPENSHIFT_JBOSS_UNIFIED_PUSH_CLUSTER
touch ${OPENSHIFT_JBOSS_UNIFIED_PUSH_DIR}/env/OPENSHIFT_JBOSS_UNIFIED_PUSH_CLUSTER_REMOTING

update-configuration java7

client_result ""
client_result "JBoss Unified Push Server added.  Please make note of these default credentials:"
client_result ""
client_result "           User: admin"
client_result "       Password: 123"
client_result " Connection URL: https://$OPENSHIFT_APP_DNS/ag-push"
client_result ""
